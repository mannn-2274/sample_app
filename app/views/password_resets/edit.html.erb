<!DOCTYPE html>
<html>
<head>
  <% provide(:title, t("reset.password_reset")) %>
  <% provide(:base_title, t("base.title")) %>
</head>
<body>
  <h1><%= t "reset.password_reset" %></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
        <%= render "shared/error_messages", object: f.object  %>
        <%= hidden_field_tag :email, @user.email %>
        <%= f.label :password, t("user.pass") %>
        <%= f.password_field :password, class: "form-control" %>
        <%= f.label :password_confirmation, t("user.verify") %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
        <%= f.submit t("reset.submit"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</body>
</html>
