<!DOCTYPE html>
<html>
<head>
  <% provide(:title, t("user.signup"))%>
  <% provide(:base_title, t("base.title")) %>
</head>
<body>
  <h1><%= t("user.signup") %></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @user do |f| %>
        <%= render "shared/error_messages" %>
        <%= f.label :name, t("user.name") %>
        <%= f.text_field :name %>
        <%= f.label :email, t("user.email")%>
        <%= f.email_field :email %>
        <%= f.label :password, t("user.pass")%>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation, t("user.verify") %>
        <%= f.password_field :password_confirmation %>
        <%= f.submit t("user.submit"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</body>
</html>

