<% if @user.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-danger">
    <%= t("user.form_error") %>
    <%= pluralize @user.errors.size, t("user.error") %>.
  </div>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
